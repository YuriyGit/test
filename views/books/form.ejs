<form  method = 'post'  class = "mt-5">
    <div class = "form-group">
        <label for = "inputTitle">Название книги</label>
        <input type = "text"
                value = "<%= title %>"
                name = "title"
                class = "form-control"
                id = "inputTitle">
    </div>

    <div class = "form-group">
        <label for = "inputAuthor">Автор книги</label>
        <input type = "text"
                value = "<%= author %>"
                name = "author"
                class = "form-control"
                id = "inputAuthor"
        >
    </div>

    <div class = "form-group">
        <label for = "inputDesc">Описание книги</label>
        <textarea
                rows = "3"
                name = "description"
                class = "form-control"
                id = "inputDesc"
        ><%= description %></textarea>
    </div>

    <div class = "form-group text-right ">
        <button type = "submit" class = "btn btn-primary">Сохранить</button>
    </div>
</form>